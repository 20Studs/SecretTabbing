{
  "manifest_version": 2,
  "name": "Tab Opener",
  "version": "1.0",
  "description": "Open Roblox.com when clicking the button in the Chrome menu.",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Open Roblox.com",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
